<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xmlns:context="http://www.springframework.org/schema/context"
xsi:schemaLocation="http://www.springframework.org/schema/beans 
http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<context:annotation-config />
	
	<bean id="dept1" class="edu.spring.autowire.Department">
		<property name="dname" value="computer" />
	</bean>
	
	<bean id="dept2" class="edu.spring.autowire.Department">
		<property name="dname" value="electronics" />
	</bean>
	
	
	<bean id="emp1" class="edu.spring.autowire.Employee">
		<property name="name" value="Tom" />
	</bean>
	


</beans>



